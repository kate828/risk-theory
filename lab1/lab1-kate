def evening_activity_decision():

    print("=== –í–∏–±—ñ—Ä –≤–µ—á—ñ—Ä–Ω—å–æ–≥–æ –∑–∞–Ω—è—Ç—Ç—è ===")
    option1 = "–ó–∞–π–Ω—è—Ç–∏—Å—è —Å–ø–æ—Ä—Ç–æ–º"
    option2 = "–í—ñ–¥–ø–æ—á–∏—Ç–∏ (–ø–æ–¥–∏–≤–∏—Ç–∏—Å—è —Å–µ—Ä—ñ–∞–ª/–ø–æ—á–∏—Ç–∞—Ç–∏ –∫–Ω–∏–≥—É)"

    p_tired = float(input("–í–≤–µ–¥—ñ—Ç—å –π–º–æ–≤—ñ—Ä–Ω—ñ—Å—Ç—å —Ç–æ–≥–æ, —â–æ –≤–∏ –±—É–¥–µ—Ç–µ –≤—Ç–æ–º–ª–µ–Ω—ñ (0..1): "))

    print(f"\n--- –û—Ü—ñ–Ω—é–≤–∞–Ω–Ω—è '{option1}' ---")
    sport_tired = int(input("–û—Ü—ñ–Ω–∫–∞ —Å–ø–æ—Ä—Ç—É, —è–∫—â–æ –≤–∏ –≤—Ç–æ–º–ª–µ–Ω—ñ (1-10): "))
    sport_energetic = int(input("–û—Ü—ñ–Ω–∫–∞ —Å–ø–æ—Ä—Ç—É, —è–∫—â–æ –≤–∏ –µ–Ω–µ—Ä–≥—ñ–π–Ω—ñ (1-10): "))

    print(f"\n--- –û—Ü—ñ–Ω—é–≤–∞–Ω–Ω—è '{option2}' ---")
    rest_tired = int(input("–û—Ü—ñ–Ω–∫–∞ –≤—ñ–¥–ø–æ—á–∏–Ω–∫—É, —è–∫—â–æ –≤–∏ –≤—Ç–æ–º–ª–µ–Ω—ñ (1-10): "))
    rest_energetic = int(input("–û—Ü—ñ–Ω–∫–∞ –≤—ñ–¥–ø–æ—á–∏–Ω–∫—É, —è–∫—â–æ –≤–∏ –µ–Ω–µ—Ä–≥—ñ–π–Ω—ñ (1-10): "))

    utility1 = p_tired * sport_tired + (1 - p_tired) * sport_energetic
    utility2 = p_tired * rest_tired + (1 - p_tired) * rest_energetic

    print("\n=== –†–µ–∑—É–ª—å—Ç–∞—Ç–∏ ===")
    print(f"–ö–æ—Ä–∏—Å–Ω—ñ—Å—Ç—å '{option1}': {utility1:.2f}")
    print(f"–ö–æ—Ä–∏—Å–Ω—ñ—Å—Ç—å '{option2}': {utility2:.2f}")

    if utility1 > utility2:
        print(f"\n–†–µ–∫–æ–º–µ–Ω–¥–∞—Ü—ñ—è: {option1} ‚úÖ")
    elif utility2 > utility1:
        print(f"\n–†–µ–∫–æ–º–µ–Ω–¥–∞—Ü—ñ—è: {option2} ‚úÖ")
    else:
        print("\n–û–±–∏–¥–≤–∞ –≤–∞—Ä—ñ–∞–Ω—Ç–∏ —Ä—ñ–≤–Ω–æ—Ü—ñ–Ω–Ω—ñ ‚Äî –æ–±–µ—Ä—ñ—Ç—å —Ç–µ, —â–æ –≤–∞–º –±—ñ–ª—å—à–µ –ø–æ–¥–æ–±–∞—î—Ç—å—Å—è üôÇ")

evening_activity_decision()
